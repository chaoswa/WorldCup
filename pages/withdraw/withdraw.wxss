page{
  width: 100%;
  background-color: #f2f2f2;
}
.container{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
button::after{
  border: none;
}
.from{
  width: 100%;
  height: 510rpx;
  background-color: #fff;
  color: #666;
}
.balance,.get{
  margin: 40rpx;
  font-size: 32rpx;
}
.money{
  font-size: 40rpx;
  font-weight: 500;
  margin:0 20rpx;
  color: #333;
}
.get input{
  display: inline-block;
  vertical-align: text-top;
}
.warning{
  font-size: 28rpx;
  text-align: center;
}
.btn-get{
  width: 90%;
  background-color: #029048;
  color: #fff;
  margin-top: 70rpx;
}
.hint{
  margin-top: 20rpx;
  font-size: 25rpx;
  color: #666;
  text-align: center;
}